{
  "name": "foolorddotcom",
  "private": true,
  "scripts": {
    "build": "node index.js",
    "deploy": "npm run build && surge --project build",
    "browse": "open build/index.html",
    "monitor": "nodemon --ext js,scss,md,html --watch src --watch layouts --exec \"npm run build\"",
    "watch": "npm run browse && npm run monitor"
  },
  "dependencies": {
    "handlebars": "^4.0.5",
    "metalsmith": "^2.1.0",
    "metalsmith-layouts": "^1.4.1",
    "metalsmith-markdown": "^0.2.1",
    "metalsmith-permalinks": "^0.5.0",
    "metalsmith-sass": "^1.3.0",
    "nodemon": "^1.9.2",
    "smooth-scroll": "github:cferdinandi/smooth-scroll"
  }
}
